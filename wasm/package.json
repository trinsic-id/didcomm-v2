{
  "name": "root",
  "private": true,
  "scripts": {
    "start": "npm install && npx lerna exec npm install",
    "build:wasm": "npm run build:proto && npm run build:wasm:node && npm run build:wasm:copy",
    "build:proto": "pwsh ./Generate-Proto.ps1",
    "build:wasm:node": "wasm-pack build --target nodejs",
    "build:wasm:copy": "cp pkg/didcommgrpc* packages/didcomm-grpc-node/src",
    "build": "npm run build:wasm && npx lerna exec npm run build",
    "test": "npx lerna run test --stream"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.4",
    "grpc-tools": "^1.10.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "ts-protoc-gen": "^0.13.0",
    "wasm-pack": "^0.9.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {}
}
